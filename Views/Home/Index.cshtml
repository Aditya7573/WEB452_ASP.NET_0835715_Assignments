@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Include the Roboto Mono font from Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet">

    <style>
        /* Define custom styles for the page */
        body {
            font-family: 'Roboto Mono', monospace; /* Use Roboto Mono font */
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
            height: 100%;
        }

        h2 {
            color: #009933;
            font-size: 24px;
        }

        p {
            font-size: 16px;
            line-height: 1.5;
        }

        .tie-image {
            width: 400px;
            height: 400px;
            padding-left: 50px;
            padding-right: 25px;
            margin: 25px 50px 25px 50px;
        }

        .tie-container {
            
            padding: 0px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            min-height: calc(100vh - 100px);
        }
      
            footer

        {
            text-align: center;
            background-color: #333;
            color: #fff;
            padding: 10px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        
    </style>
</head>
<body>
    <h2>Fashion Tie</h2>

    <p>Welcome to the Fashion Tie Company</p>

    <a class="nav-link" asp-area="" asp-controller="Ties" asp-action="Index">Tie's Table</a>

    <div class="tie-container">
        <img class="tie-image" src="~/img/Tie1.jpg" alt="Tie 1" />
        <img class="tie-image" src="~/img/Tie2.jpg" alt="Tie 2" />
        <img class="tie-image" src="~/img/Tie3.jpg" alt="Tie 3" />
        <img class="tie-image" src="~/img/Tie4.jpg" alt="Tie 4" />
    </div>
</body>
</html>
