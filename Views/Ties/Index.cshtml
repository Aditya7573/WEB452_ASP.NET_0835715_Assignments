@model Aditya_Tie.Models.TieMaterialViewModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Include the Roboto Mono font from Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet">

    <style>
        /* Define custom styles for the page */
        body {
            font-family: 'Roboto Mono', monospace; /* Use Roboto Mono font */
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
            
        }

        h1 {
            color: #0066cc;
            font-size: 28px;
        }

        h2 {
            color: #009933;
            font-size: 24px;
        }

        p {
            font-size: 16px;
            line-height: 1.5;
        }

        .form-container {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .table-container {
            margin-top: 20px;
            margin-bottom:100px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        footer {
            text-align: center;
            background-color: #333;
            color: #fff;
            padding: 10px 0;
         
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div class="form-container">
            <h2>Filter Ties</h2>
            <form asp-controller="Ties" asp-action="Index">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <div class="form-group">
                    <label asp-for="SelectedMaterial" class="control-label">Select Material:</label>
                    <select asp-for="SelectedMaterial" asp-items="Model.Materials" class="form-control">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="SearchString" class="control-label">Title:</label>
                    <input type="text" asp-for="SearchString" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Filter" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="table-container">
            <h2>Tie's Table</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Ties[0].Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Ties[0].Design)</th>
                        <th>@Html.DisplayNameFor(model => model.Ties[0].ReleaseDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Ties[0].Material)</th>
                        <th>@Html.DisplayNameFor(model => model.Ties[0].Price)</th>
                        <th>@Html.DisplayNameFor(model => model.Ties[0].IsAvailable)</th>
                        <th>@Html.DisplayNameFor(model => model.Ties[0].Rating)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Ties)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Design)</td>
                            <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Material)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                            <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
